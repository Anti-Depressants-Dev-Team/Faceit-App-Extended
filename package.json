{
    "name": "faceit-app-extended",
    "version": "1.0.0",
    "description": "Electron wrapper for FACEIT with extension support and ad-blocking",
    "main": "main.js",
    "author": "Anti-Depressants-Dev-Team",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "dependencies": {
        "@cliqz/adblocker-electron": "^1.27.2",
        "cross-fetch": "^4.0.0",
        "electron-is-dev": "^2.0.0"
    },
    "devDependencies": {
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.antidepressants.faceit-extended",
        "productName": "FACEIT Extended",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "package.json",
            "extensions/**/*"
        ],
        "extraResources": [
            {
                "from": "extensions",
                "to": "extensions",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "faceit.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icon.png"
        }
    }
}