<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FaceitExtended.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceitExtended"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="FACEIT Extended">

    <Grid Background="#1f1f1f" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Height="48" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Controls -->
            <!-- Navigation Controls -->
            <Border Grid.Column="0" Margin="12,0,0,0" VerticalAlignment="Center" 
                    Background="#2d2d2d" BorderBrush="#3d3d3d" BorderThickness="1" CornerRadius="4" Padding="4">
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <Button x:Name="BackButton" Click="BackButton_Click" 
                            Width="32" Height="32" Background="Transparent" BorderThickness="0" CornerRadius="4"
                            IsEnabled="False" ToolTipService.ToolTip="Back" Padding="0">
                        <SymbolIcon Symbol="Back"/>
                    </Button>
                    <Button x:Name="ForwardButton" Click="ForwardButton_Click" 
                            Width="32" Height="32" Background="Transparent" BorderThickness="0" CornerRadius="4"
                            IsEnabled="False" ToolTipService.ToolTip="Forward" Padding="0">
                        <SymbolIcon Symbol="Forward"/>
                    </Button>
                    <Rectangle Width="1" Height="16" Fill="#3d3d3d" VerticalAlignment="Center"/>
                    <Button x:Name="RefreshButton" Click="RefreshButton_Click" 
                            Width="32" Height="32" Background="Transparent" BorderThickness="0" CornerRadius="4"
                            ToolTipService.ToolTip="Refresh" Padding="0">
                        <SymbolIcon Symbol="Refresh"/>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Title & Drag Area -->
            <TextBlock Grid.Column="1" Text="FACEIT Extended" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#a0a0a0" FontSize="12" FontWeight="SemiBold"/>
        </Grid>

        <!-- WebView2 Control -->
        <controls:WebView2
            x:Name="WebView"
            Grid.Row="1"
            DefaultBackgroundColor="#1f1f1f"/>
    </Grid>
</Window>
