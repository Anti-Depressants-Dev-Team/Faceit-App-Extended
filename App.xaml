<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FaceitExtended.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceitExtended">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Dark Theme Colors -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1f1f1f"/>
            <SolidColorBrush x:Key="AppForegroundBrush" Color="#ffffff"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#ff5500"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
